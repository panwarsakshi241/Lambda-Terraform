pipeline{
    agent any

    environment {
        def myString = "Hello Sakshi."
        def myNumber = 4
        def myBool = true
    }

    stages{
        stage("Demo") {
            steps {
                echo "myString : ${myString}"
                echo "myNumber : ${myNumber}"
                echo "myBoolean : ${myBool}"
            }
        }
    }
}